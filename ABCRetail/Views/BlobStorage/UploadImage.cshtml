@model ABCRetail.Models.ImageUploadModel

@{
    ViewData["Title"] = "Upload Image";
}

<h2>Upload Image</h2>

<form asp-action="UploadImage" enctype="multipart/form-data" method="post">
    <div class="form-group">
        <label asp-for="FileName">File Name</label>
        <input asp-for="FileName" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="File">Select Image</label>
        <input asp-for="File" type="file" class="form-control-file" />
    </div>
    <button type="submit" class="btn btn-primary">Upload</button>
</form>

<a href="@Url.Action("Index")" class="btn btn-secondary">Back to List</a>
