@{
    ViewData["Title"] = "Welcome to ABC Retail";
}

<div class="container-fluid bg-light text-center p-5" style="background-color: #f8f9fa;">
    <div class="row align-items-center justify-content-center" style="min-height: 40vh;">
        <div class="col-md-8 col-lg-6">
            <h1 class="display-3 font-weight-bold">Welcome to ABC Retail</h1>
            <p class="lead mt-3">Your one-stop shop for all your retail needs. Discover the best products, deals, and more.</p>
            <a href="/shop" class="btn btn-primary btn-lg mt-4">Shop Now</a>
            <a href="/about" class="btn btn-outline-primary btn-lg mt-4 ml-2">Learn More</a>
        </div>
    </div>
</div>

<div class="container text-center mt-5">
    <div class="row">
        <div class="col-md-4">
            <div class="card border-0 shadow-sm p-4">
                <h5 class="card-title">Exclusive Products</h5>
                <p class="card-text">Find unique items you won’t see anywhere else.</p>
                <a href="/exclusive" class="btn btn-primary">Explore</a>
            </div>
        </div>
        <div class="col-md-4 mt-4 mt-md-0">
            <div class="card border-0 shadow-sm p-4">
                <h5 class="card-title">Special Offers</h5>
                <p class="card-text">Take advantage of our ongoing promotions and save big.</p>
                <a href="/offers" class="btn btn-primary">Discover</a>
            </div>
        </div>
        <div class="col-md-4 mt-4 mt-md-0">
            <div class="card border-0 shadow-sm p-4">
                <h5 class="card-title">Customer Support</h5>
                <p class="card-text">We’re here to help you with anything you need.</p>
                <a href="/support" class="btn btn-primary">Get Help</a>
            </div>
        </div>
    </div>
</div>
