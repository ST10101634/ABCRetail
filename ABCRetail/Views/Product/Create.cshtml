@model ABCRetail.Models.Product

@{
    ViewData["Title"] = "Create Product";
}

<h2>Create Product</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="PartitionKey" class="control-label"></label>
        <input asp-for="PartitionKey" class="form-control" />
        <span asp-validation-for="PartitionKey" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="RowKey" class="control-label"></label>
        <input asp-for="RowKey" class="form-control" />
        <span asp-validation-for="RowKey" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ProductName" class="control-label"></label>
        <input asp-for="ProductName" class="form-control" />
        <span asp-validation-for="ProductName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Price" class="control-label"></label>
        <input asp-for="Price" class="form-control" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary" />
    </div>
</form>

<a asp-action="Index" class="btn btn-secondary">Back to List</a>
