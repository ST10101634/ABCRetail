@model ABCRetail.Models.CustomerProfile

@{
    ViewData["Title"] = "Create Customer";
}

<h2>Create Customer</h2>

<form asp-action="CreateCustomer" method="post">
    <div class="form-group">
        <label asp-for="PartitionKey" class="control-label"></label>
        <input asp-for="PartitionKey" class="form-control" />
        <span asp-validation-for="PartitionKey" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="RowKey" class="control-label"></label>
        <input asp-for="RowKey" class="form-control" />
        <span asp-validation-for="RowKey" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Email" class="control-label"></label>
        <input asp-for="Email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="PhoneNumber" class="control-label"></label>
        <input asp-for="PhoneNumber" class="form-control" />
        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
</form>
