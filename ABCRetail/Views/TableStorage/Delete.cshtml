@model ABCRetail.Models.CustomerProfile

@{
    ViewData["Title"] = "Delete Customer";
}

<h2>Delete Customer</h2>

<div>
    <h4>Are you sure you want to delete this customer?</h4>
    <div>
        <dl class="row">
            <dt class="col-sm-2">Partition Key</dt>
            <dd class="col-sm-10">@Model.PartitionKey</dd>
            <dt class="col-sm-2">Row Key</dt>
            <dd class="col-sm-10">@Model.RowKey</dd>
            <dt class="col-sm-2">Name</dt>
            <dd class="col-sm-10">@Model.Name</dd>
            <dt class="col-sm-2">Email</dt>
            <dd class="col-sm-10">@Model.Email</dd>
            <dt class="col-sm-2">Phone Number</dt>
            <dd class="col-sm-10">@Model.PhoneNumber</dd>
        </dl>
        <form asp-action="DeleteCustomerConfirmed" method="post">
            <input type="hidden" asp-for="PartitionKey" />
            <input type="hidden" asp-for="RowKey" />
            <button type="submit" class="btn btn-danger">Delete</button>
            <a asp-action="IndexCustomer" class="btn btn-secondary">Cancel</a>
        </form>
    </div>
</div>
