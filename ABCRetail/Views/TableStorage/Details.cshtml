@model ABCRetail.Models.CustomerProfile

@{
    ViewData["Title"] = "Customer Details";
}

<h2>Customer Details</h2>

<div>
    <h4>CustomerProfile</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Partition Key</dt>
        <dd class="col-sm-10">@Model.PartitionKey</dd>
        <dt class="col-sm-2">Row Key</dt>
        <dd class="col-sm-10">@Model.RowKey</dd>
        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.Name</dd>
        <dt class="col-sm-2">Email</dt>
        <dd class="col-sm-10">@Model.Email</dd>
        <dt class="col-sm-2">Phone Number</dt>
        <dd class="col-sm-10">@Model.PhoneNumber</dd>
    </dl>
    <a asp-action="EditCustomer" asp-route-partitionKey="@Model.PartitionKey" asp-route-rowKey="@Model.RowKey" class="btn btn-primary">Edit</a>
    <a asp-action="IndexCustomer" class="btn btn-secondary">Back to List</a>
</div>
